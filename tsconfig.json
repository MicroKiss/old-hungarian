{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "lib": ["ES2024"],
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules", "dist", "test"]
}
